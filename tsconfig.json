{
  "compilerOptions": {
    "declaration": true,
    "target": "es5",
    "lib": ["esnext"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "dist/mjs",
    "sourceMap": true
  },
  "include": [
    "index.ts",
    "lib/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "__tests__",
    "dist"
  ],
  "references": [
    {
      "path": "tsconfig.commonjs.json"
    },
    {
      "path": "tsconfig.mjs.json"
    }
  ]
}
